<section class="py-20 bg-white">
  <div class="max-w-[1120px] mx-auto px-4 md:px-10">
    <h2 class="text-[32px] text-brand-strong text-center mb-12">
      {{ section.settings.title | default: 'BESTSELLER' }}
    </h2>
    <div class="grid md:grid-cols-3 gap-8">
      {% assign collection = collections[section.settings.collection] %}
      
      {% if collection != blank %}
        {% for product in collection.products limit: 3 %}
          {% render 'product-card', product: product %}
        {% endfor %}
      {% else %}
        {% for i in (1..3) %}
          <div class="flex flex-col items-center text-center group">
            <div class="overflow-hidden rounded-3xl mb-6 border border-gray-100 w-full max-w-[236px] bg-gray-100 h-[236px]">
              {{ 'product-' | append: i | placeholder_svg_tag }}
            </div>
            <h3 class="text-[16px] text-brand-strong font-normal mb-2 px-4">Example Product {{ i }}</h3>
            <p class="text-[16px] font-bold text-brand-strong mb-4">â‚¬ 59,99</p>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "BESTSELLER"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}
