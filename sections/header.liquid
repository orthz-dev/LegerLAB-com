<header class="bg-white sticky top-0 z-50 shadow-sm font-lato" data-component="Header">
  <div class="max-w-[1120px] mx-auto px-4 md:px-10 py-2 flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="cursor-pointer flex-shrink-0">
      <img 
        src="{{ 'logo-header.png' | asset_url }}" 
        alt="Léger LAB" 
        class="w-[80px] object-contain"
        width="80"
        height="auto"
      />
    </a>

    <!-- Desktop Nav -->
    <nav class="hidden lg:flex items-center gap-6">
      <a href="/pages/collant" class="text-[14px] font-normal text-brand-strong hover:text-brand-text transition-all">
        Collant
      </a>
      <a href="/pages/come-si-usa" class="text-[14px] font-normal text-brand-strong hover:text-brand-text transition-all">
        Come si Usa
      </a>
      <a href="/pages/lavora-con-noi" class="text-[14px] font-normal text-brand-strong hover:text-brand-text transition-all">
        Lavora con Noi
      </a>

      <!-- Blog Dropdown -->
      <div class="relative group">
        <button class="flex items-center gap-1 text-[14px] font-normal text-brand-strong hover:text-brand-text transition-all">
          Blog
          <span class="text-[10px]">▼</span>
        </button>
        <div class="absolute top-full left-0 bg-white shadow-lg rounded-lg py-2 min-w-[150px] transition-all duration-200 opacity-0 invisible translate-y-2 group-hover:opacity-100 group-hover:visible group-hover:translate-y-0">
          <a href="/pages/lo-sapevi-che" class="block w-full text-left px-4 py-2 text-[14px] text-brand-strong hover:bg-brand-soft">
            Lo Sapevi Che?
          </a>
          <a href="/pages/magazine" class="block w-full text-left px-4 py-2 text-[14px] text-brand-strong hover:bg-brand-soft">
            Magazine
          </a>
        </div>
      </div>

      <a href="/pages/faq" class="text-[14px] font-normal text-brand-strong hover:text-brand-text transition-all">
        FAQ
      </a>
    </nav>

    <!-- Mobile Toggle -->
    <button
      class="lg:hidden flex flex-col gap-[5px] p-2"
      aria-label="Menu"
    >
      <span class="block w-[33px] h-[4px] bg-brand-strong rounded-[3px]"></span>
      <span class="block w-[33px] h-[4px] bg-brand-strong rounded-[3px]"></span>
      <span class="block w-[33px] h-[4px] bg-brand-strong rounded-[3px]"></span>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="lg:hidden fixed top-0 right-0 h-screen bg-white w-[300px] shadow-2xl transform transition-transform duration-300 z-50 translate-x-full overflow-y-auto">
    <div class="flex justify-end p-4">
       <button id="close-mobile-menu" class="text-2xl text-brand-strong">&times;</button>
    </div>
    <nav class="flex flex-col gap-4 p-6">
      <div class="border-b border-gray-100 pb-2">
        <a href="/pages/collant" class="flex w-full justify-between items-center text-left text-[16px] text-brand-strong font-normal">
          Collant
        </a>
      </div>

      <div class="border-b border-gray-100 pb-2">
        <a href="/pages/come-si-usa" class="flex w-full justify-between items-center text-left text-[16px] text-brand-strong font-normal">
          Come si Usa
        </a>
      </div>

      <div class="border-b border-gray-100 pb-2">
        <a href="/pages/lavora-con-noi" class="flex w-full justify-between items-center text-left text-[16px] text-brand-strong font-normal">
          Lavora con Noi
        </a>
      </div>

      <div class="border-b border-gray-100 pb-2">
        <button class="flex w-full justify-between items-center text-left text-[16px] text-brand-strong font-normal mobile-dropdown-trigger">
          Blog
          <span class="arrow-icon transition-transform">▼</span>
        </button>
        <div class="pl-4 mt-2 flex flex-col gap-2 hidden">
          <a href="/pages/lo-sapevi-che" class="text-left text-[14px] text-brand-text">
            Lo Sapevi Che?
          </a>
          <a href="/pages/magazine" class="text-left text-[14px] text-brand-text">
            Magazine
          </a>
        </div>
      </div>

      <div class="border-b border-gray-100 pb-2">
        <a href="/pages/faq" class="flex w-full justify-between items-center text-left text-[16px] text-brand-strong font-normal">
          FAQ
        </a>
      </div>
    </nav>
  </div>
  <div id="mobile-menu-overlay" class="fixed inset-0 bg-black/20 z-40 lg:hidden hidden"></div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": []
}
{% endschema %}
