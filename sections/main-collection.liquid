<div class="max-w-[1120px] mx-auto px-4 md:px-10 py-12">
  <h1 class="text-3xl font-bold text-center text-brand-strong mb-12">{{ collection.title }}</h1>
  
  {% if collection.description != blank %}
    <div class="text-center text-brand-strong mb-12 max-w-3xl mx-auto">
      {{ collection.description }}
    </div>
  {% endif %}

  <div class="grid md:grid-cols-3 gap-8">
    {% for product in collection.products %}
      {% render 'product-card', product: product %}
    {% else %}
      <p class="col-span-3 text-center text-gray-500">Nessun prodotto trovato in questa collezione.</p>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Collection Main",
  "settings": []
}
{% endschema %}
