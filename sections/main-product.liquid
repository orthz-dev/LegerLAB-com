<section class="max-w-[1120px] mx-auto px-6 py-12 font-lato">
  <article class="grid md:grid-cols-2 gap-12 lg:gap-20">
    
    <!-- Gallery Section -->
    <div class="space-y-4">
       <div class="aspect-[3/4] rounded-2xl overflow-hidden bg-brand-soft shadow-inner">
         <img 
           src="{{ product.featured_image | img_url: 'master' }}" 
           alt="{{ product.title }}" 
           class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
         />
       </div>
       <div class="grid grid-cols-4 gap-4">
          {% for image in product.images limit: 4 %}
            <div class="aspect-square rounded-lg overflow-hidden bg-brand-soft cursor-pointer opacity-70 hover:opacity-100">
              <img src="{{ image | img_url: '200x200', crop: 'center' }}" alt="{{ image.alt }}" class="w-full h-full object-cover"/>
            </div>
          {% endfor %}
       </div>
    </div>

    <!-- Product Details -->
    <div class="flex flex-col justify-center">
       <div class="mb-2 text-brand-text/60 font-bold uppercase tracking-widest text-xs">Trattamento Corpo</div>
       
       <h1 class="text-3xl md:text-4xl font-black text-brand-strong mb-4">
         {{ product.title }}
       </h1>

       <div class="flex items-baseline gap-2 mb-6">
          <span class="text-3xl font-bold text-brand-strong">{{ product.price | money_without_currency }}</span>
          <span class="currency text-xl text-brand-strong">€</span>
       </div>

       <div class="flex items-center gap-2 mb-8 text-green-700 font-medium bg-green-50 px-3 py-1 rounded-md w-fit">
          <span class="w-2 h-2 rounded-full bg-green-600"></span>
          <span>Disponibile</span>
       </div>

       <div class="text-brand-text text-lg leading-relaxed mb-8">
         {{ product.description }}
       </div>

       {% form 'product', product %}
         <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">

         <!-- Variant Selector (Size) -->
         {% unless product.has_only_default_variant %}
           <div class="mb-8">
             <label class="block text-sm font-bold text-brand-strong mb-2">SELEZIONA TAGLIA</label>
             <div class="flex gap-4">
               {% for variant in product.variants %}
                 <div class="relative">
                   <input 
                    type="radio" 
                    name="id" 
                    value="{{ variant.id }}" 
                    id="variant-{{ variant.id }}" 
                    class="peer sr-only"
                    {% if variant == product.selected_or_first_available_variant %}checked{% endif %}
                   >
                   <label 
                    for="variant-{{ variant.id }}"
                    class="block border-2 border-brand-fresh rounded-lg px-6 py-2 font-bold text-brand-text cursor-pointer peer-checked:bg-brand-fresh peer-checked:text-brand-strong hover:bg-brand-fresh hover:text-brand-strong transition-colors"
                   >
                     {{ variant.title }}
                   </label>
                 </div>
               {% endfor %}
             </div>
           </div>
         {% endunless %}

         <button 
           type="submit"
           name="add"
           class="w-full bg-brand-strong text-white font-bold text-lg py-4 rounded-full shadow-xl hover:bg-brand-strong/90 transition-all mb-4"
         >
           AGGIUNGI AL CARRELLO
         </button>
       {% endform %}

       <p class="text-xs text-gray-400">SKU: {{ product.selected_or_first_available_variant.sku }}</p>

       <!-- Additional Info Tabs -->
       <div class="mt-12 border-t border-gray-100 pt-8 space-y-6">
          <details class="group cursor-pointer">
            <summary class="flex justify-between items-center font-bold text-brand-strong list-none">
              INCI / Ingredienti
              <span class="transition group-open:rotate-180">▼</span>
            </summary>
            <p class="text-sm text-gray-600 mt-4 leading-relaxed">
              Aqua, Magnesium Sulfate (Sali di Epsom), Glycerin, Centella Asiatica Extract, Aesculus Hippocastanum Extract...
            </p>
          </details>
          <details class="group cursor-pointer">
            <summary class="flex justify-between items-center font-bold text-brand-strong list-none">
              Spedizione
              <span class="transition group-open:rotate-180">▼</span>
            </summary>
            <p class="text-sm text-gray-600 mt-4 leading-relaxed">
              Spedizione gratuita in tutta Italia. Consegna in 24/48 ore lavorative.
            </p>
          </details>
       </div>
    </div>

  </article>
</section>

{% schema %}
{
  "name": "Main Product",
  "settings": []
}
{% endschema %}
