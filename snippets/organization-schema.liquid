<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "{{ shop.name }}",
  "url": "{{ shop.url }}",
  "logo": "{{ 'logo.png' | asset_url }}",
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "{{ shop.phone }}",
    "contactType": "customer service",
    "email": "{{ shop.email }}",
    "availableLanguage": ["Italian", "English"]
  },
  "sameAs": [
    {% if shop.social.facebook %}"{{ shop.social.facebook }}",{% endif %}
    {% if shop.social.instagram %}"{{ shop.social.instagram }}",{% endif %}
    {% if shop.social.twitter %}"{{ shop.social.twitter }}"{% endif %}
  ]
}
</script>
